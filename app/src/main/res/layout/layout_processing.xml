<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/processing_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/processing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/processing"
        android:theme="@style/PrimaryLatoTitle"
        app:layout_constraintBottom_toTopOf="@+id/processing_gif"
        app:layout_constraintEnd_toEndOf="@+id/processing_gif"
        app:layout_constraintStart_toStartOf="@+id/processing_gif" />

    <ImageView
        android:id="@+id/processing_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_processing" />

</androidx.constraintlayout.widget.ConstraintLayout>